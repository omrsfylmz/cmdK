{
  "manifest_version": 3,
  "name": "CmdK Bookmarks",
  "version": "1.0.1",
  "description": "Cmd+K command palette for bookmarks and more",
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
